

<%-include('./partials/header')%>

<h1>Display all the blogs</h1>

<article>
    <%for(let blog of allBlogs){%>
        <div>
            <h1><%=blog.id%></h1>
            <h2><%=blog.title></h2>
            <h3><%=blog.author></h3>
            <p><%=blog.comment></p>
        </div>
    <%}%>
</article>


